generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String   @unique
  name      String?
  firstName String?
  lastName  String?
  role      Role     @default(USER)
  registered Event[] @relation("EventAttendees")
  ownEvents  Event[] @relation("EventOwner")
}

model Event {
  id        Int      @id @default(autoincrement())
  latitude  Float
  longitude Float
  title     String
  description String
  date      DateTime
  cost      Decimal @db.Decimal(10,2) @default(0)
  ownerId   String
  owner     User    @relation("EventOwner", fields: [ownerId], references: [id])
  attendees User[]  @relation("EventAttendees")
}

enum Role {
  USER
  ORGANIZATION
  ADMIN
}